{
    "git": {
        "commit": true,
        "tag": true,
        "push": true,
        "commitMessage": "chore: release v${version}"
    },
    "github": {
        "release": true
    },
    "npm": {
        "publish": true,
        "publishArgs": [
            "--access public"
        ]
    },
    "hooks": {
        "before:init": [
            "npm run lint",
            "npm test"
        ],
        "after:bump": "npm run build"
    }
}